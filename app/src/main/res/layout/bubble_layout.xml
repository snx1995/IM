<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:id="@+id/message_send_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="10dp"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/message_send_text"
            android:background="@drawable/send_bubble2"
            android:maxEms="12"
            android:text="asdafsxcvsfqweqweasdasdqweasfzfzxcasdwqeqweqwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/send_tmp"
            android:id="@+id/message_send_user_image"
            android:scaleType="centerInside"
            android:layout_width="60dp"
            android:layout_height="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        android:id="@+id/message_receive_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/receive_tmp"
            android:id="@+id/message_receive_user_image"
            android:scaleType="centerInside"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:paddingTop="10dp"
            android:paddingStart="30dp"
            android:paddingLeft="30dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/message_receive_text"
            android:background="@drawable/receive_bubble2"
            android:maxEms="12"
            android:text="asdafsxcvsfqweqweasdasdqweasfzfzxcasdwqeqweqwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:id="@+id/message_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:padding="5dp"
            android:src="@drawable/receive_tmp"
            android:id="@+id/message_item_photo"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:id="@+id/message_item_friend_name"
                android:text="@string/tmp_user_name"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/tmp_message"
                android:id="@+id/message_item_friend_text"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>